<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fuze" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/bg_main_color</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.StartSplashFuze" parent="Theme.SplashScreen" tools:ignore="ResourceCycle">
        <item name="android:statusBarColor">@color/bg_main_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_logo</item>
        <item name="windowSplashScreenBackground">@color/bg_main_color</item>
        <item name="postSplashScreenTheme">@style/Theme.Fuze</item>
    </style>
</resources>